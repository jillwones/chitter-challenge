<html lang="en">
<head>
  <meta charset=utf-8>
  <title>Chitter</title>
</head>
<body>
<h2>Chitter</h2>
<form action="/" method="get">

  <div class="container">
    <a href="/">
      <button type="button">Log Out</button>
    </a>
  </div>
</form>

<h3>Write new peep...</h3>
<br>
<form action="/peep/new" method="post">
  <div class="container">
   
    <input type="text" placeholder="insert peep here" name="content" required>

    <button type="submit">Post Peep</button>
  </div>
</form>
<h3>User ID of user currently logged in:<%= @user_id %></h3>
  <% @peeps.reverse.each do |peep| %>
    <div>
      <% user = @user_repository.find_by_id(peep.user_id) %>
      <p> <%= user.username %> - <%= peep.content %> </p><br>
      <p> <%= peep.time_posted %>
    </div>
      <% comments = @comment_repository.find_by_peep(peep.id) %>
      <% if !comments.empty? %>
        <% comments.each do |comment| %>
          <div>
            <% user = @user_repository.find_by_id(comment.user_id) %>
            <p> <%= user.username %> - <%= comment.content %> </p><br>
            <p> <%= comment.time_posted %>
          </div>
      <%  end %>
    <% end %>
  <% end %>
</body>
</html>